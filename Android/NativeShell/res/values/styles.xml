<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="LoginButtonTheme" parent="@android:style/Widget.Button">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
		<item name="android:layout_weight">1</item>
		<item name="android:textSize">20sp</item>
		<item name="android:background">@drawable/white_button_drawable</item>
	</style>

    <style name="Theme.Roblox.StandardFontLight">
        <item name="fontName">SourceSansPro-Light.ttf</item>
    </style>

    <style name="Theme.Roblox.StandardFontRegular">
        <item name="fontName">SourceSansPro-Regular.ttf</item>
    </style>

    <style name="Theme.Roblox.StandardFontThick">
        <item name="fontName">SourceSansPro-Black.ttf</item>
    </style>

    <style name="Theme.Roblox.StandardFontSemibold">
        <item name="fontName">SourceSansPro-Semibold.ttf</item>
    </style>

    <style name="Theme.Roblox.StandardFontBold">
        <item name="fontName">SourceSansPro-Bold.ttf</item>
    </style>

    <style name="Theme.Roblox.StandardFontItalic">
        <item name="fontName">SourceSansPro-Italic.ttf</item>
    </style>

    <style name="Theme.Roblox.Button.Flat.White" parent="@android:style/Widget.Button">
        <item name="android:textColor">@color/RbxGray2</item>
        <item name="fontName">SourceSansPro-Regular.ttf</item>
        <item name="android:background">@drawable/rbx_drawable_flat_button_white</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="Theme.Roblox.Button.Flat.White.Settings" parent="Theme.Roblox.Button.Flat.White">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">@dimen/textSizeSignupHeader</item>
    </style>

    <style name="Theme.Roblox.Button.Flat.Blue" parent="@android:style/Widget.Button">
        <item name="android:textColor">@color/white</item>
        <item name="fontName">SourceSansPro-Regular.ttf</item>
        <item name="startingColor">@color/RbxBlue3</item>
        <item name="endAlpha">30</item>
        <item name="android:background">@drawable/rbx_drawable_flat_button_blue</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="Theme.Roblox.Button.Flat.Blue.Settings" parent="Theme.Roblox.Button.Flat.Blue">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">@dimen/textSizeSignupHeader</item>
        <item name="android:background">@drawable/rbx_bg_flat_button_blue_dark</item>

    </style>

    <style name="Theme.Roblox.Button.Flat.Transparent" parent="@android:style/Widget.Button">
        <item name="android:textColor">@color/white</item>
        <item name="fontName">SourceSansPro-Regular.ttf</item>
        <item name="startingColor">@color/RbxBlue3</item>
        <item name="endAlpha">30</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="Theme.Roblox.Progress.Button" parent="@android:style/Widget.TextView">
        <item name="fontName">SourceSansPro-Regular.ttf</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/RbxRed1</item>
        <item name="buttonTextSize">25sp</item>
        <item name="buttonTextColor">@color/white</item>
        <item name="progressTextSize">25sp</item>
        <item name="progressTextColor">@color/white</item>
    </style>

    <style name="Theme.Roblox.Progress.Button.Green" parent="Theme.Roblox.Progress.Button">
        <item name="backgroundResource">@drawable/rbx_drawable_flat_button_progress_green</item>
        <item name="startingColor">@color/RbxBlue3</item>
    </style>

    <style name="Theme.Roblox.Progress.Button.Blue" parent="Theme.Roblox.Progress.Button">
        <item name="backgroundResource">@drawable/rbx_drawable_flat_button_progress_blue</item>
    </style>

    <style name="Theme.Roblox.Button.Gender.Male" parent="Theme.Roblox.Button.Flat.White">
        <item name="android:background">@android:color/transparent</item>
        <item name="startingColor">@color/RbxBlueLight</item>
    </style>

    <style name="Theme.Roblox.Button.Gender.Female" parent="Theme.Roblox.Button.Flat.White">
        <item name="android:background">@android:color/transparent</item>
        <item name="startingColor">@color/RbxRed2</item>
    </style>

    <style name="Theme.Roblox.EditText" parent="@android:style/Widget.EditText">
        <item name="fontName">SourceSansPro-Light.ttf</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="Theme.Roblox.DefaultSpinner" parent="@android:style/Widget.Spinner">
        <item name="android:background">@drawable/rbx_bg_solid_white</item>
    </style>

    <style name="Theme.Roblox.DefaultSpinnerItem" parent="@android:style/Widget.TextView.SpinnerItem">
        <item name="android:textAppearance">@style/Theme.Roblox.DefaultSpinnerItem.TextAppearance</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Theme.Roblox.DefaultSpinnerItem.TextAppearance" parent="android:TextAppearance.Widget.TextView.SpinnerItem">
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/textSizeButton</item>
    </style>

    <style name="LoginEditTextTheme" parent="@android:style/Widget.EditText">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">20sp</item>
        <!--<item name="android:onClick">onClick</item>-->
        <item name="android:textColor">@color/black</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:background">@drawable/textfield_searchview_holo_light</item>
	</style>
    
    <style name="LoginCheckboxTheme" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
		<item name="android:layout_weight">1</item>
		<item name="android:textSize">20sp</item>
	</style>

    <style name="Theme.Roblox.WebDialogCenteredTitle" parent="@android:style/Theme.Dialog">
        <item name="android:windowTitleStyle">@style/Theme.Roblox.DialogCenteredTitle</item>
    </style>

    <style name="Theme.Roblox.DialogCenteredTitle" parent="@android:style/TextAppearance.DialogWindowTitle">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Theme.Roblox.TabTheme" parent="android:Theme">
        <item name="android:tabStripEnabled">false</item>
    </style>

    <style name="Theme.Roblox.TabTextIndicator">
        <item name="android:textAppearance">@android:style/TextAppearance.Holo.Medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/tabBarTextSize</item>
        <item name="android:textStyle">bold</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:maxLines">2</item>
        <item name="android:maxWidth">200dip</item>
    </style>

    <style name="RobloxCompatTheme.Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">18sp</item>
    </style>

</resources>
